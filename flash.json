{
    "flash":
    {
        "version": "2.0",
        "id": "POS",
        "osplatform": "android",
        "commands":
        [
            {
                "tool": "fastboot",
                "args": "flashall",
                "timeout": 60000,
                "retry": 2,
                "mandatory": true,
                "environment": {
                    "ANDROID_PRODUCT_OUT":"$flashfile_dir"
                }
            }
        ]
    }
}
