"""
Generates a bootable fastboot USB image from target-files zip.

Usage:  fastboot_usb_from_target_files input_target_files_zip output_file
"""

import sys
import os
import zipfile

if sys.hexversion < 0x02040000:
    print >> sys.stderr, "Python 2.4 or newer is required."
    sys.exit(1)

# Android Release Tools
sys.path.append("build/tools/releasetools")
import common

sys.path.append("device/intel/build/releasetools")
import intel_common

OPTIONS = common.OPTIONS

def main(argv):
    args = common.ParseOptions(argv, __doc__)

    if (len(args) != 2):
        common.Usage(__doc__)
        sys.exit(1)

    print "unzipping target-files..."
    OPTIONS.input_tmp, input_zip = common.UnzipTemp(args[0])
    OPTIONS.info_dict = common.LoadInfoDict(input_zip)

    print "creating %s" % (args[1],)

    fastboot = intel_common.GetFastbootImage(OPTIONS.input_tmp).WriteToTemp()
    z = os.path.join(OPTIONS.input_tmp, "RADIO", "loader_usb.zip")
    rootzip = zipfile.ZipFile(z, "a")
    rootzip.write(fastboot.name, "fastboot.img")
    rootzip.close()

    intel_common.MakeVFATFilesystem(z, args[1])
    common.Cleanup()

if __name__ == '__main__':
    try:
        common.CloseInheritedPipes()
        main(sys.argv[1:])
    except common.ExternalError, e:
        print
        print "   ERROR: %s" % (e,)
        print
        sys.exit(1)

